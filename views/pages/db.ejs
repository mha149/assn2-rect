<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rectangle</title>
    <link rel="stylesheet" href="/stylesheets/db.css">
</head>

<body>

  <div class="container">
    <ul>
      <h2>Database Results</h2>
      <table style="width:50%">
        <tr>
          <th>UUID</th>
          <th>Name</th>
          <th>Color</th>
          <th>Border Color</th>
          <th>Opacity</th>
        </tr>
        <% rows.forEach(function(r) { %>
          <tr>
            <td>
              <%= r.id %>
            </td>
            <td>
              <a href="/infodb/<%= r.id %>">
                <%= r.name %>
              </a>
            </td>
            <td>
              <%= r.color %>
            </td>
            <td>
              <%= r.bordercolor %>
            </td>
            <td>
              <%= r.opacity %>
            </td>
          </tr>
          <% }); %>
      </table>
    </ul><br>
    <ul>
      <a href="/adddb"><button>Add New Rectangle</button></a>
    </ul>

  </div>

</body>

</html>